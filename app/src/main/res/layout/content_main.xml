<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    android:gravity="top"
    android:textAlignment="center"
    android:background="@android:color/white"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.opilane.alko_kalko.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.07"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="Alko Kalkoâ„¢"
        android:textColor="#000000"
        android:textSize="24dp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        tools:textStyle="italic"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editOp1"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Mitu liitrit on teie jook?"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textSize="18dp"
        android:visibility="visible"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editOp2"
        android:elevation="1dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Mitu % on teie jook?"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textSize="18dp"
        android:visibility="visible"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editOp3"
        android:elevation="1dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Mitu euri maksab teie jook?"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textSize="18dp"
        android:visibility="visible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_KalkItGud"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:onClick="liidaArvud"
            android:text="Calculate"
            android:textColor="#000000" />



        <Button
            android:id="@+id/btn_kustuta"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:onClick="kustutaArvud"
            android:text="Refresh"
            android:textColor="#000000" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.15"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="Teie joogis maksab 1ml alkoholi nii mitu senti."
        android:textColor="#000000"
        android:textColorLink="?android:attr/editTextColor"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        tools:textStyle="bold|italic"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:ems="10"
        android:gravity="center_horizontal"
        android:text="0.00"
        android:inputType="number"
        android:textColor="#000000"
        android:textSize="18sp" />

</LinearLayout>
